{{!
    @template mod_comments/comment_posts

    Example context (json):
    {
        "section": "Topic 5",
        "messages": [
            {"id": "12", "userpix": "<img src='http://localhost/eef/pluginfile.php/5/user/icon/mypd/f2?rev=15'>", "firsname": "Kieran","lastname":"Briggs", "date": "22 April", "message": "content of the message"},
            {"id": "14", "userpix": "<img src='http://localhost/eef/pluginfile.php/5/user/icon/mypd/f2?rev=15'>", "firstname": "Tony","lastname":"Stark", "date": "2 April", "message": "I am Iron Man"}
        ]
    }

}}
<h4>{{section}}</h4>
<div id = "comment-posts" data-region="comment-posts">
<ul class ="comments feed">
    {{#messages}}
        <li id="message{{id}}" class="item">
            <div class="userpix">{{{userpix}}}</div>
            <div class="msg-body">
                <div class="header">
                    <div class="name">{{firstname}} {{lastname}} <em>says</em></div>
                    <div class="date">{{#userdate}}{{created}}, %d %b{{/userdate}}</div>
                </div>
                <div class="message">{{message}}</div>
                <div class="options"><a id="like" class="likes" href="">{{# str}}like, mod_comments{{/str}}</a>  <a id="remove" class="delete" href="">{{# str}}delete, mod_comments{{/str}}</a></div>
            </div>
        </li>
    {{/messages}}
</ul>
</div>
{{#js}}
    require(['mod_comments/options'], function(remove) {
    remove.remove();
    });
{{/js}}
