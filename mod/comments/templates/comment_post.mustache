{{!
    @template mod_comments/comment_post

    Example context (json):
    {
        "messageid": 12,
        "userpix": "Picture Here",
        "name": "Kieran Briggs",
        "date": "22 April",
        "message": "content of the message"
    }

}}
<li id="{{messageid}}" class="item">
    <div class="userpix">{{userpix}}</div>
        <div class="msg-body">
            <div class="header">
                <div class="name">{{username}}</div>
                <div class="date">{{date}}</div>
            </div>
            <div class="message">{{message}}</div>
        </div>
    <div class="social"><a class="likes" href="#">{{# str}}like, mod_comments{{/str}}</a> | <a class="delete" href="#">{{# str}}delete, mod_comments{{/str}}</a></div>
</li>
