<nav id="mypd-pm" tabindex="-1">
    <div id="mypd-pm-inner">
        <!-- Header -->
        <header id="mypd-pm-header" class="clearfix">
            <div class="pull-right">
                <a id="mypd-pm-close" class="js-mypd-pm-trigger mypd-action-icon mypd-icon-close" href="#">
                        <small>{{#str}}closebuttontitle{{/str}}</small>
                </a>
            </div>
            <!-- User details -->
            <div class="mypd-pm-user">
                {{{userpicture}}}
                {{{fullnamelink}}}
                {{{realfullnamelink}}}
                <div id="mypd-pm-header-quicklinks">
                {{#quicklinks}}
                    <a {{#id}}id="{{.}}" {{/id}}href="{{link}}">{{title}}</a>
                {{/quicklinks}}
                </div>
            </div>


        </header>

        <!-- Content -->
        <div id="mypd-pm-content" class="row">
            <!-- Courses -->
            <section id="mypd-pm-courses" class="col-lg-9">
                <h2 class="sr-only">{{#str}}courses{{/str}}</h2>

{{!
    When the user has courses which have finished, output course by year as tabs.
}}

                {{#coursenav}}
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist" id="mypd-pm-courses-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-expanded="true" aria-controls="mypd-pm-courses-current" href="#mypd-pm-courses-current" id="mypd-pm-tab-current" role="tab" data-toggle="tab">{{#str}}courses{{/str}}</a>
                            </li>
                            {{#pastcourselist}}
                                <li class="nav-item">
                                    <a class="nav-link" href="#mypd-pm-courses-{{year}}" aria-controls="mypd-pm-courses-{{year}}" id="mypd-pm-tab-{{year}}" role="tab" data-toggle="tab">{{year}}</a>
                                </li>
                            {{/pastcourselist}}
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content" id="mypd-pm-courses-content">
                        <!-- Current courses -->
                        {{> theme_mypd/personal_menu_current_courses }}

                        <!-- Past courses by year -->
                        {{#pastcourselist}}
                            <div id="mypd-pm-courses-{{year}}" class="tab-pane clearfix" role="tabpanel" aria-labelledby="hmypd-pm-tab-{{year}}">
                                {{#courses}}
                                    {{> theme_mypd/course_cards }}
                                {{/courses}}
                            </div>
                        {{/pastcourselist}}
                    </div>
                {{/coursenav}}

{{!
    When the user has no course which have finished, output current courses only.
}}

                {{^coursenav}}
                <!-- Current courses -->
                {{> theme_mypd/personal_menu_current_courses }}
                {{/coursenav}}

                {{{browseallcourses}}}
            </section>
            <!-- Updates -->
            <div id="mypd-pm-updates" class="col-lg-3">
                {{#updates}}
                    {{#update}}
                        <section>{{{.}}}</section>
                    {{/update}}
                {{/updates}}
            </div>
        </div>
        {{#updates}}
            {{{mobilemenu}}}
        {{/updates}}
        <!-- // End Content -->
    </div>
</nav>
