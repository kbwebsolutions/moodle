<div id="mypd-pm" class="mypd-pm-login-form" tabindex="-1">
    <div id="mypd-pm-inner">

        <header id="mypd-pm-header" class="clearfix">
            <div class="pull-right">
                <a id="mypd-pm-close" class="js-mypd-pm-trigger mypd-action-icon mypd-icon-close" href="#">
                        <small>{{#str}}closebuttontitle{{/str}}</small>
                </a>
            </div>
            <h1>{{#str}}login{{/str}}</h1>
        </header>
        <div class="card">
            <div class="card-block">
                <div class="card-body">
                    <div class="row justify-content-md-center">
                        <div class="col-md-5 left-side">
                            <h5>Members Login</h5>
                            <p>Chartered College of Teachers members should use the button below to login to MyPD</p>
                            {{#altlogins}}
                                {{{.}}}
                                <br><hr><br>
                            {{/altlogins}}
                        </div>
                            <div class="col-md-5 right-side">
                                <h6>Visitor Login</h6>
                                <p>If you are participating in the Early Career Teacher project, please login here with your usual username and password</p>
                            <form action='{{action}}'  method='post'>
                                <input type="hidden" name="logintoken" value="{{logintoken}}">
                                <div class="form-group">
                                    <label class="form-control-label" for='username' >{{#str}}username{{/str}}</label>
                                    <input class="form-control" autocapitalize='off' type='text' name='username' id='username' placeholder='Username' required>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label" for='password'>{{#str}}password{{/str}}</label>
                                    <input class="form-control" type='password' name='password' id='password' placeholder='Password' required>
                                </div>
                                <br>
                                <input type='submit' class="btn btn-outline-primary btn-block" value='{{#str}}login{{/str}}'>
                            </form>

                            <div id="mypd-pm-login-help">
                                <a class="btn btn-primary" href="{{action}}"><i class="fa fa-info-circle" aria-hidden="true"></i> {{#str}}help{{/str}}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
